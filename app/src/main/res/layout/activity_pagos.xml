<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#4A76C0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAGOS Y PREMIOS"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="15dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="15dp"
                android:background="#FFFFFF">

                <TextView
                    android:text="Cartones Pagos:"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvCartonesVendidos"
                    android:layout_width="100dp"
                    android:background="#E8F5E9"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_gravity="end"/>

                <TextView
                    android:text="Precio por CartÃ³n:"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/etPrecioCarton"
                    android:layout_width="100dp"
                    android:background="#E8F5E9"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:hint="0.00"
                    android:textAlignment="center"
                    android:layout_gravity="end" />
            </GridLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <Spinner
                android:id="@+id/spnModalidades"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="#9CCC65"/>

            <Button
                android:id="@+id/btnAgregarMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGREGAR"
                android:layout_marginStart="10dp"
                android:backgroundTint="#9CCC65"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="5dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Modalidad" android:textColor="#FFFFFF" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="%" android:textColor="#FFFFFF" android:gravity="center" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Bs." android:textColor="#FFFFFF" android:gravity="center" android:textStyle="bold"/>
            <View android:layout_width="40dp" android:layout_height="0dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPremiosSeleccionados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F1F8E9"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="CASA (Ganancia):"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#33691E"
                    android:textSize="16sp"
                    android:layout_height="30dp"/>

                <EditText
                    android:id="@+id/etPorcCasa"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etMontoCasa"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:text="0.00"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="RECALCULAR TOTALES"
            android:backgroundTint="#FFC107"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCopiar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="COPIAR WHATSAPP"
                android:backgroundTint="#25D366"
                android:layout_marginEnd="5dp"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GUARDAR REPORTE"
                android:backgroundTint="#9CCC65"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>