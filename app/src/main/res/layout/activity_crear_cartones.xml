<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Cantidad de cartones -->
        <EditText
            android:id="@+id/txtCantidad"
            android:hint="Cantidad de Cartones"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"/>

        <!-- Imagen de fondo -->
        <Button
            android:id="@+id/btnImagenFondo"
            android:text="Seleccionar Imagen de Fondo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

        <!-- Color encabezado -->
        <Button
            android:id="@+id/btnColorEncabezado"
            android:text="Seleccionar Color Encabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

        <!-- Vista previa -->
        <Button
            android:id="@+id/btnVistaPrevia"
            android:text="Vista Previa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

        <!-- Control de vista previa -->
        <ImageView
            android:id="@+id/imgVistaPrevia"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:scaleType="fitCenter"/>

        <!-- Crear cartones -->
        <Button
            android:id="@+id/btnCrear"
            android:text="Crear Cartones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>