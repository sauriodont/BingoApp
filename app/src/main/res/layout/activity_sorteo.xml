<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A76C0"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Bolillero"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"/>

        <LinearLayout
            android:id="@+id/layoutModTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitulo"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modalidad: "
                android:textColor="#000000"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spnModalidadesSorteo"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:backgroundTint="#8BC34A" />
        </LinearLayout>

        <Button
            android:id="@+id/btnIniciarSorteo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutModTop"
            android:layout_marginTop="10dp"
            android:backgroundTint="#8BC34A"
            android:text="Iniciar Sorteo"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/layoutCentral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnIniciarSorteo"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#2E7D32"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="B" android:textColor="#FFFFFF" android:gravity="center" android:textStyle="bold" android:textSize="22sp"/>
                    <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="I" android:textColor="#FFFFFF" android:gravity="center" android:textStyle="bold" android:textSize="22sp"/>
                    <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="N" android:textColor="#FFFFFF" android:gravity="center" android:textStyle="bold" android:textSize="22sp"/>
                    <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="G" android:textColor="#FFFFFF" android:gravity="center" android:textStyle="bold" android:textSize="22sp"/>
                    <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="O" android:textColor="#FFFFFF" android:gravity="center" android:textStyle="bold" android:textSize="22sp"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/containerBolillero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBolillero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <View
                        android:id="@+id/capaClicBolillero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <Button
                    android:id="@+id/btnBingo"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:backgroundTint="#8BC34A"
                    android:text="Bingo"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSacarNumero"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#8BC34A"
                    android:text="Numero"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnCopiarBolillero"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#8BC34A"
                    android:text="Copiar"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:elevation="4dp">

                    <TextView
                        android:id="@+id/tvUltimaLetra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#C62828"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000" />

                    <TextView
                        android:id="@+id/tvUltimoNumero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#1A237E"
                        android:textSize="70sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvNombreModActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FFC107"
                    android:gravity="center"
                    android:text="MODALIDAD"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <GridLayout
                    android:id="@+id/gridMiniatura"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:columnCount="5"
                    android:rowCount="5"
                    android:padding="2dp"
                    android:background="#CCCCCC"
                    android:layout_gravity="center">
                </GridLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvConteoNumeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutCentral"
            android:layout_marginTop="15dp"
            android:text="Numeros salidos: 0 de 75"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/layoutTablaGanadores"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/tvConteoNumeros"
            android:layout_marginTop="10dp"
            android:background="#2E508F"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="¡¡¡¡¡TENEMOS GANADOR!!!!!"
                android:textColor="#FFEB3B"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGanadoresInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Esperando ganadores..."
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnFinalizarSorteo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTablaGanadores"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="#C62828"
            android:text="Finalizar Sorteo"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</ScrollView>